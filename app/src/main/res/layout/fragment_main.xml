<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.mainfragment.MainFragment"
    android:id="@+id/scrollViewMain"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E1DAED"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:background="@drawable/rectangle_round_edt"
            >
            <EditText
                android:id="@+id/edtSearchWallpaper"
                android:layout_width="0dp"
                android:ems="12"
                android:inputType="text"
                android:layout_weight="9"
                android:backgroundTint="#00FFFFFF"
                android:textColorHint="#888484"
                android:hint="Find Wallpaper.."
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/btnSearchWallpaper"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/baseline_search_24"
                app:tint="@color/grey"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best of the Month"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_20ssp"
            android:layout_gravity="start"
            android:gravity="start"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_18sdp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recViewBestOfMonth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_190sdp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:nestedScrollingEnabled="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_18sdp"/>
        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:id="@+id/mainShimmer"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:visibility="visible"
            android:layout_height="wrap_content">
            <include layout="@layout/row_best_of_month_shimmer"/>
        </com.facebook.shimmer.ShimmerFrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The color tone"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_20ssp"
            android:layout_gravity="start"
            android:gravity="start"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_18sdp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recViewColor"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:focusableInTouchMode="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_18sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_20ssp"
            android:layout_gravity="start"
            android:gravity="start"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_18sdp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recViewCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
           android:nestedScrollingEnabled="false"
            android:focusableInTouchMode="true"
            android:paddingStart="@dimen/_18sdp"
            android:paddingEnd="@dimen/_18sdp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
